{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve",
      "type": "shell",
      "command": "bundle exec jekyll serve --drafts",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": false,
      "problemMatcher": ["$jekyll-error-watch", "$jekyll-warning-watch"]
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "bundle exec jekyll build",
      "problemMatcher": ["$jekyll-error", "$jekyll-warning"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "display_file",
      //"command": "${command:workbench.action.files.save}"
      "type": "shell",
      "command": "echo ${file}"
    },
    {
      "label": "add_keywords",
      "type": "shell",
      "command": "python3 add_keyphrases_to_jekyll_blog_post.py -i \"${file}\"",
      "options": {
        "cwd": "${workspaceFolder}/.vscode/scripts"
      },
      "presentation": {
        "reveal": "never",
        "focus": true
      }
    },
    {
      "label": "display_file_and_add_keywords", // Add a keyboard shortcut for this task. Ex. CTRL+SHIFT+F10
      "dependsOrder": "sequence",
      "dependsOn": [
        "display_file",
        "add_keywords"
      ]
    }
  ]
}
